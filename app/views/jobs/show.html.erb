<% if @job.valid? %>

  <h1><%= @job.title %></h1>

  <p><%= @job.category %></p>
  <p><%= @job.company.name %></p>
  <p><%= @job.description %></p>
  <p><%= @job.location %></p>


    <% if @job.featured? %>
       <strong>Destaque</strong>
    <% end %>

  <% else %>
      <%= flash[:alert] = 'Não foi possível criar a vaga' %>
      <%= render :new %>

<% end %>


<p><%= link_to 'Voltar', root_path %></p>
